 
		var Mia_timi; 
		//Ελέγξτε την λειτουργία της if αν αλλάξτε την τιμή της μεταβλητής με άλλους ακεραίους/δεκαδικούς
		Mia_timi=12; 
		if (Mia_timi <0){ 
			document.write("Αρνητικός Αριθμός"); 
			window.alert("Αρνητικός Αριθμός"); 
			console.log("Αρνητικός Αριθμός"); 
		}else if(Mia_timi ==21){
			document.write("Μαντεψες Σωστα");
			window.alert("Μαντεψες Σωστα"); 
			console.log("Μαντεψες Σωστα"); 
		}else if(Mia_timi ==0){ 
			document.write("Μηδενικη Τιμη"); 
			window.alert("Μηδενικη Τιμη"); 
			console.log("Μηδενικη Τιμη"); 
		}else if(Mia_timi >0){ 
			document.write("Θετικός Αριθμός");
			window.alert("Θετικός Αριθμός"); 
			console.log("Θετικός Αριθμός"); 
		}
 

